<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="8dp"
    android:background="@drawable/form_bg1">

    <TextView
        android:id="@+id/tvFormTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track your vehicle health"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etOwnerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Owner Name"
        android:background="@drawable/edit_text_bg"/>

    <EditText
        android:id="@+id/etModelNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chasis No"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_bg"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Get Status"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Add ListView below the other views -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginVertical="8dp"/>

</LinearLayout>
